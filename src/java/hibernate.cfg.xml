<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.DerbyDialect</property>
    <property name="hibernate.connection.driver_class">org.apache.derby.jdbc.ClientDriver</property>
    <property name="hibernate.connection.url">jdbc:derby://localhost:1527/frames1</property>
    <property name="hibernate.connection.username">nbuser</property>
    <property name="hibernate.connection.password">nbuser</property>
    <property name="hibernate.hbm2ddl.auto">update</property>
    <mapping class="br.com.locadora.mapeamento.pessoa.Cliente.java" file="" jar="" package="" resource=""/>
  </session-factory>
</hibernate-configuration>
